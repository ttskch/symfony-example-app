{% extends 'base.html.twig' %}

{% block subtitle %}{{ 'Edit project'|trans }}{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('widgets_form-collection') }}
{% endblock %}

{% block content_container %}
  {% include 'widgets/breadcrumb.html.twig' with {items: [
    {label: 'Project'|trans, path: path('project_index')},
    {label: project, path: path('project_show', {id: project.id})},
    {label: 'Edit'|trans},
  ]} %}

  {% include 'widgets/content-navbar.html.twig' with { title: block('subtitle') } %}

  <div class="container ml-0 px-0">
    {% include 'project/_form.html.twig' with {cancelPath: pathOrReturnTo('project_show', {id: project.id})} %}

    <div class="float-left">
      {% include 'project/_delete_form.html.twig' %}
    </div>
  </div>
{% endblock %}
