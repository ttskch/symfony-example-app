<nav class="navbar navbar-expand {{ navbarClass ?? 'navbar-light bg-light' }} mb-3">
  <span class="navbar-brand mr-auto" style="white-space:normal;">{{ title }}</span>

  {% if block('nav_items')|trim is not empty %}
    <ul class="navbar-nav" style="white-space:nowrap;">
      {% block nav_items %}
      {% endblock %}
    </ul>
  {% endif %}

  {% if block('dropdown_items')|trim is not empty %}
    <ul class="navbar-nav {{ dropdownClass ?? '' }}">
      {% if block('dropdown_items')|trim is not empty %}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle hide-after text-right" href="#" id="content-navbar-dropdown-1" role="button" data-toggle="dropdown">
            <i class="fa fa-ellipsis-h"></i>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="content-navbar-dropdown-1">
            {% block dropdown_items %}
            {% endblock %}
          </div>
        </li>
      {% endif %}
    </ul>
  {% endif %}
</nav>
